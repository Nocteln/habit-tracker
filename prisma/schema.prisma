generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  body     String
  comment  String
  comments String[]
  slug     String
  title    String
  user     String
  userId   String
}

model User {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  email          String
  kindeId        Float
  name           String
  profilePicture String
  pseudo         String
}


